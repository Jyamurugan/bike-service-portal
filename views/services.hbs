{{> navigation}}
<style>
    .check {
        vertical-align: bottom;
        line-height: 1.5rem;
        color: #26a69a;
    }
    .bg {
        background-color: aliceblue;
    }
    .flex {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }
</style>
<div class="row bg flex">
    <div class="col s12">
        <h2 class="form-header">
            Fill in the form. We will get back to you
        </h2>
    </div>
    <form class="col s12" name="serviceForm" action="/thanks" onsubmit="return validateForm()" method="get">
        <div class="row">
            <div class="input-field col s12">
                <select name="service" id="serviceSelect" value="{{selectedService}}" onchange="serviceSelection()">
                    <option value="" disabled selected>Choose Service</option>
                    {{#each services}}
                        <option value="{{this.code}}">{{this.title}}, ({{this.cost}})</option>
                    {{/each}}
                </select>
                <label>Select Service</label>
            </div>
            <div id="service-instruction">

            </div>

            <div class="input-field col s12">
                <input name="customer" placeholder="Name" id="Name" type="text" class="validate" required>
                <label for="Name">Name</label>
            </div>

            <div class="input-field col s12">
                <input name="vehicle" placeholder="Vehicle Type" id="Vehicle" type="text" class="validate" required>
                <label for="Vehicle">Vehicle Type</label>
            </div>

            <div class="input-field col s12">
                <input name="location" placeholder="Location" id="Location" type="text" class="validate" value="Selayur" required>
                <label for="Location">Location</label>
            </div>

            <div class="input-field col s12">
                <input name="contact" placeholder="Phone" id="Phone" type="tel" class="validate" minlength="10" maxlength="10" required>
                <label for="Phone">Phone Number</label>
            </div>

            <div class="col s12 center-align">
                <button type="submit" class="waves-effect waves-light btn">Submit</button>
            </div>
        </div>
    </form>
</div>

<script src="/javascripts/services.js"></script>
{{> footer}}